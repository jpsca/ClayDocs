{#def title="" #}

<Layout title={title} description={meta.get('description', '')}>
  <NavBar></NavBar>
  <div class="px-4 sm:px-6 lg:px-8 pb-16 z-10 mx-auto flex justify-between
  ">
    <SidebarGlobal class="hidden lg:block"></SidebarGlobal>
    <main class="lg:pl-8 pt-10 2xl:mx-10 w-full max-w-full">
      <div class="Page prose">
        {{ content }}
      </div>
      <PrevNext
        class="mt-16 w-full"
        curr={nav.page}
        prev={nav.prev_page}
        next={nav.next_page}
      ></PrevNext>
    </main>
    <SidebarLocal class="hidden xl:block pl-8"></SidebarLocal>
  </div>
  <Menu></Menu>
  <Footer></Footer>
</Layout>
