{#def trigger_key="k" #}
{#js lunr-2.3.9.js, SearchDialog.js, toggle.js #}

<dialog {{ attrs.render(
  class="SearchDialog not-prose text-sm h-full sm:h-4/5 w-full sm:w-4/5 max-w-3xl sm:rounded-lg
  bg-white dark:bg-zinc-800 dark:text-zinc-100 p-0 border border-zinc-400
  backdrop:backdrop-blur-sm backdrop:bg-zinc-500/30",
  data_index="/static/search-" + nav.page.lang + ".json",
  data_trigger_key=trigger_key,
) }}>
  <header class="px-4 flex items-center">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
    </svg>

    <input
      class="SearchInput bg-transparent border-none h-14 w-full pl-3 pr-4 outline-none"
      type="search"
      placeholder="Search documentation"
      autofocus=True
    />

    <kbd
      class="
        ml-auto
        text-xs
        font-semibold
        w-9
        h-8
        flex
        items-center
        justify-center
        rounded
        border
        border-zinc-300
        dark:border-zinc-600
        text-zinc-400
        hover:text-zinc-500
        dark:hover:text-zinc-300
        leading-tight
        cursor-pointer
      "
      data-toggle-modal="#search-dialog"
    >ESC</kbd>
  </header>
  <div class="SearchResults border-t border-zinc-300 absolute top-14 bottom-0 w-full overflow-y-auto overflow-x-hidden"></div>
  <template><SearchResult /></template>
</dialog>
