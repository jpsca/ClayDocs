{#def target, active=False, tag="button" #}
{#js tab.js #}

{%- if active %}{% do attrs.add_class("active") %}{% endif -%}
{%- if tag == "button" %}{% do attrs.setdefault("type", "button") %}{% endif -%}

<{{ tag }} {{ attrs.render(
    class="UITab",
    role="tab",
    aria_selected="true" if active else "false",
    aria_controls=target,
    tabindex="0" if active else "-1",
) }}>{{ content }}</{{ tag }}>
