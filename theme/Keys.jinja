{#def sep="+", symbols=True #}

{% set symbol_map = {
  "alt": "⎇",
  "arrow_down": "↓",
  "arrow_left": "←",
  "arrow_right": "→",
  "arrow_up": "↑",
  "back": "⌫",
  "backspace": "⌫",
  "bksp": "⌫",
  "caps_lock": "⇪",
  "cmd": "⌘",
  "command": "⌘",
  "control": "⌃",
  "ctrl": "⌃",
  "down": "↓",
  "enter": "⏎",
  "esc": "⎋",
  "escape": "⎋",
  "left": "←",
  "menu": "☰",
  "meta": "◆",
  "opt": "⌥",
  "option": "⌥",
  "print_screen": "⎙",
  "print": "⎙",
  "prtsc": "⎙",
  "return": "⏎",
  "right": "→",
  "shift": "⇧",
  "super" :"❖",
  "tab": "⇥",
  "up": "↑",
  "win": "⊞",
  "windows": "⊞",
} %}

<span class="not-prose inline-flex items-center text-sm font-mono font-medium leading-0">
{% for key in content.split(sep) -%}
  {% set symbol = symbol_map.get(utils.underscore(key)) -%}

  <kbd class="flex items-center border rounded border-white dark:border-black bg-zinc-100 dark:bg-zinc-900 py-[0.1em] px-1 shadow-[0_0_2px_0_#000]">
    {%- if symbols and symbol -%}
      <span class="block mr-1 align-text-bottom">{{ symbol }}</span>
    {%- endif -%}

    {{ key|trim }}
  </kbd>
  {% if not loop.last %}+{% endif %}
{%- endfor %}
</span>
