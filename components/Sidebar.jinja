{% do attrs.add(
  class="group fixed inset-0 z-50 overflow-scroll overscroll-contain"
) %}
<div {{ attrs.render() }}>
  <div
    class="
      backdrop
      group-open:fixed
      inset-0
      bg-black/20
      backdrop-blur-sm
  "></div>

  <div class="
    p-6
    w-96
    max-w-full
    fixed
    top-0
    bottom-0
    left-0
    justify-between
    border-r
    bg-white
  ">
    <span class="logo block h-10 w-32 rounded-lg bg-gray-200"></span>

    <nav aria-label="Main menu" class="mt-6 flex flex-col space-y-1">
      <Toc toc={nav.toc} page_url={nav.page.url} />
    </nav>
  </div>
</div>
