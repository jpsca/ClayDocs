{#js toggle.js #}

{% do attrs.setdefault(title="Show table of contents") %}
{% do attrs.set(
  class="
    group
    flex
    justify-center
    items-center
    p-2
    text-sm
    font-semibold
    rounded
    hover:shadow-sm
    appearance-none
    cursor-pointer
    touch-manipulation
    whitespace-nowrap

    disabled:cursor-default
    disabled:outline-none
    focus:outline-sky-500
    focus:outline-offset-1

    bg-transparent
    hover:bg-zinc-400/10
    dark:hover:bg-white-400/10
    active:bg-zinc-200/10

    border
    border-transparent
    hover:border-zinc-200
    active:border-zinc-100
    dark:hover:border-zinc-600
    dark:active:border-zinc-700

    text-zinc-500
    hover:text-zinc-600
    dark:text-zinc-400
    dark:hover:text-zinc-300
  ",
  type="button",
  data_toggle="#menu|[open]",
) %}

<button {{ attrs.render() }}>
  <svg width="24" height="24" class="mr-1 pointer-events-none">
    <path d="M5 6h14M5 12h14M5 18h14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
  </svg>
  <span class="hidden sm:inline-block pointer-events-none">
    Menu
  </span>
</button>
