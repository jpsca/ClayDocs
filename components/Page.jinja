{#def title="" #}

<Layout title={title}>
  <div class="max-w-8xl mx-auto px-4 sm:px-6 md:px-8 flex">
    <Menu class="lg:hidden" />
    <div class="hidden lg:block">
      <Sidebar />
    </div>
    <main class="z-20 mx-auto pt-10 max-w-3xl w-full mt-8">
      <div class="prose prose-slate dark:prose-dark">
        {{ content }}

        <PrevNext
          class="my-10"
          curr={nav.page}
          prev={nav.prev_page}
          next={nav.next_page}
        />
      </div>
    </main>
    <div class="hidden xl:block">
      <PageToc page_toc={nav.page_toc} />
    </div>
  </div>
</Layout>
