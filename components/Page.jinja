{#def title="" #}

<Layout title={title}>
  <div class="max-w-8xl mx-auto px-4 sm:px-6 md:px-8">
    <Sidebar open />
    <div class="lg:pl-[19.5rem] z-20">
      <main class="max-w-3xl mx-auto pt-10 xl:max-w-none xl:ml-0 xl:mr-[15.5rem] xl:pr-16">
        <div class="z-20 prose prose-slate mt-8 dark:prose-dark max-w-3xl w-full">
          {{ content }}
        </div>
        <PrevNext
          class="my-10"
          curr={nav.page}
          prev={nav.prev_page}
          next={nav.next_page}
        />
      </main>
      <PageToc page_toc={nav.page_toc} />
    </div>
  </div>
</Layout>
