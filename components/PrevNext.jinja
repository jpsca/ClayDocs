{#def curr, prev, next #}

<div {{ attrs.render() }}>
  <nav class="text-zinc-700 font-semibold flex items-center dark:text-zinc-200 z-20">
    {% if prev -%}
    <a
      href="{{ prev.url }}"
      class="group no-underline"
    >
      <div class="text-xs text-sky-500 uppercase font-semibold tracking-wide">
        {{ prev.section if prev.section != curr.section else "&nbsp;" }}
      </div>
      <div class="flex items-center hover:text-zinc-900 dark:hover:text-white">
        <ArrowLeft class="mr-3 w-auto h-1.5 text-zinc-400 overflow-visible group-hover:text-zinc-600 dark:group-hover:text-zinc-300" />
        {{ prev.title }}
      </div>
    </a>
    {%- endif %}
    {% if next -%}
    <a
      href="{{ next.url }}"
      class="group ml-auto no-underline"
    >
      <div class="text-xs text-sky-500 uppercase font-semibold tracking-wide">
        {{ next.section if next.section != curr.section else "&nbsp;" }}
      </div>
      <div class="flex items-center hover:text-zinc-900 dark:hover:text-white">
        {{ next.title }}
        <ArrowLeft class="rotate-180 ml-3 w-auto h-1.5 text-zinc-400 overflow-visible group-hover:text-zinc-600 dark:group-hover:text-zinc-300" />
      </div>
    </a>
    {%- endif %}
  </nav>
</div>
